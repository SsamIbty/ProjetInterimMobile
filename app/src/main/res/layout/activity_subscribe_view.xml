<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".frontend.subscription.Subscribe">


    <!--Top Navbar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="@dimen/back_width"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:padding="@dimen/icon_padding"
                android:src="@drawable/ic_baseline_arrow_back_ios_new_24" />


        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <LinearLayout
            android:paddingTop="40dp"
            android:paddingBottom="@dimen/back_width"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/background_padding"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">


                    <RelativeLayout
                        android:layout_width="358dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="@dimen/card_padding"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="@dimen/card_padding"
                        android:layout_marginBottom="@dimen/card_padding"
                        android:layout_weight="0.5"
                        android:background="@drawable/rounded">

                        <TextView
                            android:id="@+id/tvCustomerMenuAddTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-black"
                            android:padding="@dimen/card_padding"
                            android:text="One-time subscription"
                            android:textColor="@color/title2"
                            android:textSize="15sp"/>

                        <Button
                            android:id="@+id/btnVacancy"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="0dp"
                            android:background="@android:color/transparent"
                            android:onClick="onClick"
                            android:padding="@dimen/card_padding"
                            android:text="See more"
                            android:textColor="@color/black"
                            android:textSize="14dp" />
                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="167dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"

                            android:src="@drawable/sub1" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="358dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="@dimen/card_padding"
                        android:layout_marginTop="120dp"
                        android:layout_marginEnd="@dimen/card_padding"
                        android:layout_marginBottom="@dimen/card_padding"
                        android:layout_weight="0.5"
                        android:background="@drawable/rounded">

                        <TextView
                            android:id="@+id/tvCustomerMenuAddTitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-black"
                            android:padding="@dimen/card_padding"
                            android:text="one-month subscription"
                            android:textColor="@color/title2"
                            android:textSize="15sp"/>

                        <Button
                            android:id="@+id/btnVacancy2"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="0dp"
                            android:background="@android:color/transparent"
                            android:onClick="onClick"
                            android:padding="@dimen/card_padding"
                            android:text="See more"
                            android:textColor="@color/black"
                            android:textSize="14dp"/>
                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="167dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"

                            android:src="@drawable/sub2" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="358dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="@dimen/card_padding"
                        android:layout_marginTop="230dp"
                        android:layout_marginEnd="@dimen/card_padding"
                        android:layout_marginBottom="@dimen/card_padding"
                        android:layout_weight="0.5"
                        android:background="@drawable/rounded">

                        <TextView
                            android:id="@+id/tvCustomerMenuAddTitle3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-black"
                            android:padding="@dimen/card_padding"
                            android:text="Trimestrial subscription"
                            android:textColor="@color/title2"
                            android:textSize="15sp"/>

                        <Button
                            android:id="@+id/btnVacancy3"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="0dp"
                            android:background="@android:color/transparent"
                            android:onClick="onClick"
                            android:padding="@dimen/card_padding"
                            android:text="See more"
                            android:textColor="@color/black"
                            android:textSize="14dp"/>
                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="167dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"

                            android:src="@drawable/sub3" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="358dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="@dimen/card_padding"
                        android:layout_marginTop="340dp"
                        android:layout_marginEnd="@dimen/card_padding"
                        android:layout_marginBottom="@dimen/card_padding"
                        android:layout_weight="0.5"
                        android:background="@drawable/rounded">

                        <TextView
                            android:id="@+id/tvCustomerMenuAddTitle4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-black"
                            android:padding="@dimen/card_padding"
                            android:text="Semi-annual subscription"
                            android:textColor="@color/title2"
                            android:textSize="15sp"/>

                        <Button
                            android:id="@+id/btnVacancy4"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="0dp"
                            android:background="@android:color/transparent"
                            android:onClick="onClick"
                            android:padding="@dimen/card_padding"
                            android:text="See more"
                            android:textColor="@color/black"
                            android:textSize="14dp"/>
                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="167dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"

                            android:src="@drawable/sub4" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="358dp"
                        android:layout_height="90dp"
                        android:layout_marginStart="@dimen/card_padding"
                        android:layout_marginTop="450dp"
                        android:layout_marginEnd="@dimen/card_padding"
                        android:layout_marginBottom="@dimen/card_padding"
                        android:layout_weight="0.5"
                        android:background="@drawable/rounded">

                        <TextView
                            android:id="@+id/tvCustomerMenuAddTitle5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-black"
                            android:padding="@dimen/card_padding"
                            android:text="Annual subscription"
                            android:textColor="@color/title2"
                            android:textSize="15sp"/>

                        <Button
                            android:id="@+id/btnVacancy5"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="0dp"
                            android:background="@android:color/transparent"
                            android:onClick="onClick"
                            android:padding="@dimen/card_padding"
                            android:text="See more"
                            android:textColor="@color/black"
                            android:textSize="14dp"/>
                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="167dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"

                            android:src="@drawable/sub5" />

                    </RelativeLayout>


                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


    <!--Bottom Navbar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <ImageView
                android:id="@+id/image_home"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/icon_padding"
                android:src="@drawable/home" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <ImageView
                android:id="@+id/image_notif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/icon_padding"
                android:src="@drawable/notification" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <ImageView
                android:id="@+id/image_profil"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/icon_padding"
                android:src="@drawable/profile" />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>